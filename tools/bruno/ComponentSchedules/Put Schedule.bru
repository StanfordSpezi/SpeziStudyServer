meta {
  name: Put Schedule
  type: http
  seq: 5
}

put {
  url: {{baseUrl}}/studies/{{studyId}}/components/{{componentId}}/schedules/{{scheduleId}}
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "scheduleDefinition": {
      "type": "repeated",
      "pattern": {
        "type": "daily",
        "hour": 14,
        "minute": 0,
        "second": 0
      }
    },
    "completionPolicy": "anytime",
    "notification": false
  }
}
